{
  "compilerOptions": {
    "lib": [
      "esnext"
    ],
    "baseUrl": "./",
    "target": "esnext",
    "module": "commonjs",
    "skipLibCheck": true,
    "jsx": "react-native",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
  },
  "include": [
    "./src/*"
  ],
  "exclude": [
    "node_modules",
    "metro.config.js",
    "babel.config.js",
    "index.js"
  ]
}